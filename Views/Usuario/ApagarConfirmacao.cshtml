@model UsuarioModel
@{
    ViewData["Title"] = "Confirmacao De apagar o Usuario";
}

<div class="text-center">
    <h3> Realmente deseja apagar esse Usuario (@Model.Nome)</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar Exclusao</a>
<a class=" btn btn-warning btn-block" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id" >Confirmar Exclusao</a>
