@model ClienteModel
@{
    ViewData["Title"] = "Confirmacao De apagar o Cliente";
}

<div class="text-center">
    <h3> Realmente deseja apagar esse Cliente @Model.Nome</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="ListCli" asp-action="Index">Cancelar Exclusao</a>
<a class=" btn btn-warning btn-block" role="button" asp-controller="ListCli" asp-action="Apagar" asp-route-id="@Model.Id" >Confirmar Exclusao</a>
