@model ClienteModel //Importando a View



<div class="text-center">
    <h1 class="display-4">Cadastrar Cliente</h1>

</div>
<form asp-controller="ListCli" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Nome</label>
        <input type="text" asp-for="Nome" class="form-control"  placeholder="Digite o Nome do cliente">
       @Html.ValidationMessageFor(x => x.Nome)
    </div>

      <div class="form-group">
        <label for="exampleInputEmail1">Fantasia</label>
        <input type="text"  asp-for="Fantasia" class="form-control" placeholder="Digite o Nome de fantasia do cliente">
        @Html.ValidationMessageFor(x => x.Fantasia)
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Documento</label>
        <input type="text" asp-for="Documento" class="form-control" placeholder="Digite o Documento do cliente">
        @Html.ValidationMessageFor(x => x.Documento)
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Endereco</label>
        <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite o endereco do cliente">
        @Html.ValidationMessageFor(x => x.Endereco)
    </div>
    
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="ListCli" asp-action="Index" role="button">Voltar</a>
</form>