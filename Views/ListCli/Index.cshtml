@model List<ClienteModel>
@{
    ViewData["Title"] = "Listagem de clientes";
}
<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="ListCli" asp-action="Criar" >Adicionar Novo cliente</a>
    </div>
    <br/>
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert " arial-label="close" >X</button>
        @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert " arial-label="close" >X</button>
            @TempData["MensagemError"]
        </div>
      
    }
    <br/>

    <h1 class="display-4">Listagem de Clientes</h1>

<table class="table" id="table-clientes">
  <thead>
    <tr>
      <th scope="col">Cod</th>
      <th scope="col">Nome</th>
      <th scope="col">Fantasia</th>
      <th scope="col">Documento</th>
      <th scope="col">Endereco</th>
    </tr>
  </thead>
  <tbody>
   
    @if(Model != null && Model.Any())
            {
               foreach (ClienteModel cliente in Model)
                {
                    <tr>
                        <th scope="row">@cliente.Id</th>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Fantasia</td>
                        <td>@cliente.Documento</td>
                        <td>@cliente.Endereco</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@cliente.Id" asp-controller="ListCli" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@cliente.Id" asp-controller="ListCli" asp-action="ApagarConfirmacao">Apagar</a>
                                
                            </div>
                        </td>

                    </tr>

                }  
            }
        </tbody>
</table>

</div>
