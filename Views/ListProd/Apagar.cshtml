@model ProdutoModel
@{
    ViewData["Title"] = "Confirmacao De apagar o produto";
}

<div class="text-center">
    <h3> Realmente deseja apagar esse Produto @Model.Descricao</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="ListProd" asp-action="Index">Cancelar Exclusao</a>
<a class=" btn btn-warning btn-block" role="button" asp-controller="ListProd" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar Exclusao</a>
